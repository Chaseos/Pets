<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeScreen">

    <fragment
        android:id="@+id/homeScreen"
        android:name="com.chaseolson.pets.home.HomeScreen"
        android:label="Pets"
        tools:layout="@layout/fragment_home_screen">

        <action
            android:id="@+id/action_list_to_pet"
            app:destination="@id/petDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/petDetailsFragment"
        android:name="com.chaseolson.pets.petdetails.PetDetailsFragment"
        android:label="PetDetailsFragment" >
        <argument
            android:name="petId"
            app:argType="integer" />
    </fragment>
</navigation>